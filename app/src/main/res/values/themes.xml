<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OurSolarSystem" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimarySurface">@color/gray</item>
        <item name="colorOnPrimaryFixed">@color/yellow_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_light</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/yellow</item>
        <!-- Фон всплывающих меню -->
        <item name="android:itemBackground">@color/yellow</item>
        <!-- TextColor -->
        <item name="android:textColor">@color/gray_dark</item>
        <!-- Верхняя панель. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Нижняя панель. -->
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <!-- Splash screen -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="s" tools:ignore="NewApi">
            ?attr/colorPrimary
        </item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">
            @drawable/ic_launcher_foreground
        </item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">200</item>
    </style>

    <style name="Theme.OurSolarSystem.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OurSolarSystem.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OurSolarSystem.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>