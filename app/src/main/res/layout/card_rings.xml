<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/colorPrimary"
    android:paddingStart="@dimen/padding_8"
    android:paddingEnd="@dimen/padding_8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rings_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="40sp"
            android:text="Rings of Saturn"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/rings_image"
            android:layout_width="@dimen/planet_card_size_200"
            android:layout_height="@dimen/planet_card_size_200"
            android:contentDescription="@string/image_planet"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rings_name"
            android:src="@drawable/merkurij"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/rings_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/padding_8"
            android:layout_marginStart="@dimen/padding_8"
            android:layout_marginEnd="@dimen/padding_8"
            app:layout_constraintTop_toBottomOf="@id/rings_image"
            android:text="Кольца Сатурна они такие кольца прям кольца"
            android:textColor="?attr/colorOnPrimaryFixed"
            android:textSize="@dimen/string_head_20sp" />

        <ImageView
            android:id="@+id/appearance_image"
            android:layout_width="@dimen/nav_header_height_176"
            android:layout_height="@dimen/nav_header_height_176"
            android:layout_marginStart="@dimen/padding_8"
            android:layout_marginTop="@dimen/padding_8"
            android:layout_marginEnd="@dimen/padding_8"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rings_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>



